%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:skaters, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:skaters, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:skaters, :edit, :id => @skater.id)

.tabs-content
  = form_for :skater, url(:skaters, :update, :id => @skater.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'skaters/form', :locals => { :f => f }
